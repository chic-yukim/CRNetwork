<StateMachine>
	<Configuration>
 		<Property startState="State:Hello" bufferSize="20" />
	</Configuration>
<TransitionRuleList>
		<TransitionRule name="Trans:1"   fromState="State:Hello"        event="Event:NetTime:Initialize"     toState="State:Initialized" type="Conditional" err="Error:NetTimeStateError"/>
    <TransitionRule name="Trans:2"   fromState="State:Hello"        event="Event:NetTime:Error"          toState="State:Error"       type="Conditional" err="Error:NetTimeStateError"/>
		<TransitionRule name="Trans:3"   fromState="State:Initialized"  event="Event:NetTime:Start"          toState="State:Started"     type="Conditional" err="Error:NetTimeStateError"/>
    <TransitionRule name="Trans:4"   fromState="State:Initialized"  event="Event:NetTime:Error"          toState="State:Error"       type="Conditional" err="Error:NetTimeStateError"/>
    <TransitionRule name="Trans:5"   fromState="State:Started"      event="Event:NetTime:Stop"           toState="State:Stopped"     type="Conditional" err="Error:NetTimeStateError"/>
    <TransitionRule name="Trans:6"   fromState="State:Started"      event="Event:NetTime:Error"          toState="State:Error"       type="Conditional" err="Error:NetTimeStateError"/>
    <TransitionRule name="Trans:7"   fromState="State:Stopped"      event="Event:NetTime:Finalize"       toState="State:Finalized"   type="Conditional" err="Error:NetTimeStateError"/>
    <TransitionRule name="Trans:8"   fromState="State:Stopped"      event="Event:NetTime:Error"          toState="State:Error"       type="Conditional" err="Error:NetTimeStateError"/>
	</TransitionRuleList>
	<EventList>
		<Event name="Event:NetTime:Initialize" location="Outer" process="Sync"/>      <!-- location=Inner/Outer, process=Sync/ASync -->
		<Event name="Event:NetTime:Start" location="Outer" process="Sync"/>           <!-- location=Inner/Outer, process=Sync/ASync -->
		<Event name="Event:NetTime:Stop" location="Outer" process="Sync"/>            <!-- location=Inner/Outer, process=Sync/ASync -->
		<Event name="Event:NetTime:Finalize" location="Outer" process="Sync"/>        <!-- location=Inner/Outer, process=Sync/ASync -->
    <Event name="Event:NetTime:Error" location="Inner" process="Sync"/>           <!-- location=Inner/Outer, process=Sync/ASync -->
	</EventList>
	<StateList>
		<State name="State:Hello"/>
		<State name="State:Initialized"/>
		<State name="State:Started"/>
		<State name="State:Stopped"/>
    <State name="State:Finalized"/>
		<State name="State:Error"/>
	</StateList>
	<ErrorList>
		<Error name="Error:TBD"/>
		<Error name="Error:NetTimeStateError"/>
	</ErrorList>
</StateMachine>
