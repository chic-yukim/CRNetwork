<?xml version="1.0" encoding="utf-8"?>
<SynchronizationConfig>
  <Info>
    <Container name="CRSyncConfig" version="1.0" />
    <Type name = "NTP"/> <!-- NTP, NTPless-->
  </Info>
  <FSM>
    <StateManager name ="SyncStateManager" value="config@CRSynchronization@State@SyncStateManager.xml"/>
  </FSM>
  <SyncerLinkList>
    <SyncerLink name="Data/Video_Link1" SyncNode="SyncNode/Data/SourceVideo01"      IntraSyncer="IntraSyncer@SourceVideo01"/>
    <SyncerLink name="Data/Video_Link2" SyncNode="SyncNode/Data/DestinationVideo01" IntraSyncer="IntraSyncer@DestinationVideo01"/>
    <!--SyncerLink name="Data/Video_Link3" SyncNode="SyncNode/DestinationVideo02" IntraSyncer="IntraSyncer@DestinationVideo02"/-->
    <SyncerLink name="Data/Audio_Link1" SyncNode="SyncNode/Data/SourceAudio01"      IntraSyncer="IntraSyncer@SourceAudio01"/>
    <SyncerLink name="Data/Audio_Link2" SyncNode="SyncNode/Data/DestinationAudio01" IntraSyncer="IntraSyncer@DestinationAudio01"/>
    <!--SyncerLink name="Data/Audio_Link3" SyncNode="SyncNode/DestinationAudio02" IntraSyncer="IntraSyncer@DestinationAudio02"/-->
  </SyncerLinkList>
  <SyncNodeList>
    <SourceList>
      <Source name="SyncNode/Data/SourceVideo01"/>
      <Source name="SyncNode/Data/SourceAudio01"/>
      <Source name="SyncNode/Control/SourceControl01"/>
    </SourceList>
    <DestinationList>
      <Destination name="SyncNode/Data/DestinationVideo01"/>
      <!--Destination name="SyncNode/DestinationVideo02"/-->
      <Destination name="SyncNode/Data/DestinationAudio01"/>
      <!--Destination name="SyncNode/DestinationAudio02"/-->
      <Destination name="SyncNode/Control/DestinationControl01"/>
    </DestinationList>
  </SyncNodeList>
  <NetTimeNodeList>
    <SourceList>
      <Source name="NetTimeNode/SourceNetTime01"/>
    </SourceList>
    <DestinationList>
      <Destination name="NetTimeNode/DestinationNetTime01"/>
    </DestinationList>
  </NetTimeNodeList>
  <SyncerList>
    <IntraSyncerList>
      <IntraSyncer name="IntraSyncer@SourceVideo01"      config="Config@CRSynchronization@Syncer@IntraSyncer@IntraSyncer_SourceVideo01.xml"/>
      <IntraSyncer name="IntraSyncer@DestinationVideo01" config="Config@CRSynchronization@Syncer@IntraSyncer@IntraSyncer_DestinationVideo01.xml"/>
      <!--IntraSyncer name="IntraSyncer@DestinationVideo02" config="Config@CRSynchronization@Syncer@IntraSyncer@IntraSyncer_DestinationVideo.xml"/-->
      <IntraSyncer name="IntraSyncer@SourceAudio01"      config="Config@CRSynchronization@Syncer@IntraSyncer@IntraSyncer_SourceAudio01.xml"/>
      <IntraSyncer name="IntraSyncer@DestinationAudio01" config="Config@CRSynchronization@Syncer@IntraSyncer@IntraSyncer_DestinationAudio01.xml"/>
      <!--IntraSyncer name="IntraSyncer@DestinationAudio02" config="Config@CRSynchronization@Syncer@IntraSyncer@IntraSyncer_DestinationAudio.xml"/-->
    </IntraSyncerList>
    <InterSyncerList>
      <InterSyncer name="SourceVideoAudioInterSyncer01"      relationA="SourceVideo01"      relationB="SourceAudio01"      
                   config="Config@CRSynchronization@Syncer@InterSyncer@InterSyncer_SourceVideoAudio.xml"/>
      <InterSyncer name="DestinationVideoAudioInterSyncer01" relationA="DestinationVideo01" relationB="DestinationAudio01"
                   config="Config@CRSynchronization@Syncer@InterSyncer@InterSyncer_DestinationVideoAudio.xml"/>
      <!--relationC="DestinationVideo02" relationD="DestinationAudio02" config="Config@CRSynchronization@Syncer@InterSyncer@InterSyncer_DestinationVideoAudio.xml"/-->
      
    </InterSyncerList>
  </SyncerList>
  <NetTimeList>
    <NetTime name="NetTimeNode" config="Config@CRSynchronization@Syncer@NetTime@CRNetTimeConfig.xml"/>
  </NetTimeList>
</SynchronizationConfig>